<% @user ||= current_user %>
<div class="stats">
  <%= link_to followings_user_path(@user) do %>
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
    <%= t ".followings" %>
  <% end %>
  <%= link_to followers_user_path(@user) do %>
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
    <%= t ".followers" %>
  <% end %>
</div>
